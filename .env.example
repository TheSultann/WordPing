BOT_TOKEN=
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wordping
# Optional default: UTC offset if you want to override Node timezone
TZ=UTC

# API server
API_PORT=3001
WEB_ORIGIN=http://localhost:5173
INIT_DATA_MAX_AGE_SECONDS=86400
# URL for Telegram Mini App (used by bot)
WEBAPP_URL=http://localhost:5173
# Allow dev auth with x-dev-user-id header (ONLY for local development)
ALLOW_DEV_AUTH=true
# Admin Telegram ID for /api/admin (default: 467595754)
# ADMIN_TELEGRAM_ID=467595754
# Add-word limit per user per day (bot /add flow)
DAILY_WORD_ADD_LIMIT=9
# Unlimited add-word IDs (comma-separated), e.g. admin IDs
# UNLIMITED_WORD_ADD_IDS=467595754
# Translation settings
# Request timeout for translation API calls (1000..30000)
TRANSLATE_API_TIMEOUT_MS=5000
TRANSLATE_CACHE_MAX=2000

# Hugging Face (primary)
HF_API_KEY=
HF_INFERENCE_BASE_URL=https://router.huggingface.co/hf-inference/models
HF_MODEL_RU_EN=Helsinki-NLP/opus-mt-ru-en
HF_MODEL_EN_RU=Helsinki-NLP/opus-mt-en-ru
HF_MODEL_UZ_EN=Helsinki-NLP/opus-mt-uz-en
HF_MODEL_EN_UZ=Helsinki-NLP/opus-mt-en-uz

# Gemini (secondary fallback)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_FALLBACK_MODELS=gemini-2.5-flash,gemini-2.0-flash-lite
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta/models

# MyMemory (final fallback)
TRANSLATE_API_URL=https://api.mymemory.translated.net/get
# Optional separate DB for integration tests
# TEST_DATABASE_URL=postgresql://user:pass@localhost:5432/wordping_test?schema=public
# DEV_USER_ID=123456789
